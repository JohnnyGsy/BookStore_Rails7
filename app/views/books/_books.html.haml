-books.each do |book|
  #book{id: book.id}
    .col-xs-6.col-sm-3
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          %img.img-shadow.general-thumbnail-img{src: url_for(book.title_image), alt: "design-book"}
          .thumb-hover
            .general-thumb-link-wrap
              = link_to book_path(id: book), class: 'thumb-hover-link' do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
              %a.thumb-hover-link{href: "#"}
                %i.fa.fa-shopping-cart.thumb-icon
      .general-thumb-info
        %p.title= book.short_title
        %p.font-16.in-gold-500 â‚¬#{book.price}
        %span.divider-sm
        %p.lead.small= book.short_authors_names
