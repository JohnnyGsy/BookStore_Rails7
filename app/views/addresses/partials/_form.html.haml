= simple_form_for(address, url: address_path(id: address), method: :put, html: { id: "#{address_type}_address" },
 defaults: { input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' }}) do |f|
  .visible-xs.visible-sm
    %h3.general-subtitle.mt-0
      = t("address.kind.#{address_type}")
  = render 'addresses/partials/form_fields', f: f, address_type: address_type
  = f.button :submit, t('button.save'), class:"btn btn-default btn"
