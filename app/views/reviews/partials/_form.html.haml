= simple_form_for review, as: :review, url: reviews_path, html: { class: 'row' }, defaults: { input_html: { class: "form-control" }} do |f|
  %h3= t('reviews.write_a_review')
  %p.general-info-text= t('reviews.score')
  .mb-15{data: { controller: 'review'} }
    - (1..5).each do |index|
      %i.fa.fa-star.rate-star.rate-empty{'data-value': index,'data-review-target': 'stars','data-action': 'mouseover->review#addStar mouseout->review#removeStar click->review#setStar'}
    = f.hidden_field :book_rate, as: :hidden, value: '0'
  = f.hidden_field :book_id, value: book_id
  .col-md-8
    .mb-40
      = f.input :title, required: false
      = f.input :body, as: :text, required: false
    .text-right
      = f.button :submit, t('button.post'), class: 'btn btn-default pull-right general-position'
