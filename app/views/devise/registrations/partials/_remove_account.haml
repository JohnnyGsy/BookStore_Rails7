.col-sm-12{data: {controller: 'remove'}}
  %p.in-gold-500.font-18.mb-25
    = t('devise.remove_account')
  = simple_form_for(resource_name, url: registration_path(resource_name), method: :delete, defaults: { input_html: { class: "form-control" }}) do |f|
    .general-settings-btn
      = f.button :submit, 'Please Remove My Account', disabled: "disabled", class: "btn btn-danger",data: { target: 'remove.removeButton' }
    .form-group.checkbox.general-settings-checkbox
      %label.checkbox-label
        = check_box_tag 'Destroy_Account_Checkbox', true, false, class: 'checkbox-input', hidden: true, data: {target: 'remove.removeCheckBox', action: 'click->remove#checked'}
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text
          = t('devise.remove_account_approve')
